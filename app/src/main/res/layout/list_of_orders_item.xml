<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/gradient_activity_list_of_my_orders">

    <TextView

        android:id="@+id/cafe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:text="Заклад" />

    <TextView

        android:id="@+id/adress_of_cafe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cafe_name"
        android:layout_marginLeft="14dp"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="17sp"
        tools:text="Адреса" />

    <TextView

        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_below="@id/cafe_name"
        android:layout_marginLeft="17dp"
        android:background="#FFFFFF" />

    <TextView

        android:id="@+id/time_of_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="21dp"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        tools:text="Час " />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/adress_of_cafe"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="#FFFFFF" />

</RelativeLayout>